{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "newLine": "LF",
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "node_modules"
  ]
}